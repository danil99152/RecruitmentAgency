@using NoteApp.Extensions
@model NoteApp.Models.VacancyListViewModel
@{
    ViewBag.Title = "Вакансии";
}
<h2 style="display:inline-block; margin-bottom:0px">@ViewBag.Title</h2>
@using (Html.BeginForm("Index", "Vacancy", FormMethod.Get, new { @class = "form-inline pull-right", style = "margin-top:20px" }))
{
    <div class="form-group">
        <input placeholder="Найти по требованиям..." name="SearchQuery" type="text" class="form-control" />
    </div>
    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Найти</button>
}
<hr />
@if (Model.Vacancies.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.SortLink("Название", "Name")</th>
                <th>@Html.SortLink("Компания", "Company")</th>
                <th>@Html.SortLink("Зарплата", "Salary")</th>
                <th>@Html.SortLink("Требования", "Requirments")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Vacancies)
            {
                @Html.DisplayFor(model => item)
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">Вакансий нет</p>
}
@if (User.IsInRole("Employer"))
{
<div class="container">
    <a href="@Url.Action("Create")" class="btn btn-success"><span class="glyphicon glyphicon-pencil"></span> Новая вакансия</a>
</div>
}
<div id="modDialog" class="modal fade" role="dialog">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
@section scripts {
    <script type="text/javascript">
        $(function () {
            $.ajaxSetup({ cache: false });
            $(".vacancy").click(function (e) {
                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })</script>
}
