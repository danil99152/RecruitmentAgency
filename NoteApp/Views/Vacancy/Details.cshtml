@model NoteApp.Models.Models.Vacancy
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@Model.Name</h4>
        </div>
        <div class="modal-body">
            <div class="panel-body">
                @Html.DisplayFor(model => model.Salary)
            </div>
            <div class="panel-body">
                @Html.DisplayFor(model => model.Time)
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>
            @Html.DisplayFor(model => model.Requirments, "ResumeRequirment")
        </div>
        <div class="modal-footer">
            @if (User.IsInRole("Employer"))
            {
                <a href="@Url.Action("Delete", new { vacancyId = Model.Id })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Удалить</a>
            }
            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            </div>
        </div>