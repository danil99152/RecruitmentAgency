@using NoteApp.Extensions
@model NoteApp.Models.ResumeListViewModel
@{
    ViewBag.Title = "Резюме";
}
<h2 style="display:inline-block; margin-bottom:0px">@ViewBag.Title</h2>
@using (Html.BeginForm("Index", "Resume", FormMethod.Get, new { @class = "form-inline pull-right", style = "margin-top:20px" }))
{
    <div class="form-group">
        <input placeholder="Найти по навыкам..." name="SearchQuery" type="text" class="form-control" />
    </div>
    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Найти</button>
}
<hr />
@if (Model.Resumes.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.SortLink("Имя", "FIO")</th>
                <th>@Html.SortLink("Дата рождения", "Birthday")</th>
                <th>@Html.SortLink("Навыки", "Requirments")</th>
                <th>Фото</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Resumes)
            {
                @Html.DisplayFor(model => item)
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">Резюме нет</p>
}
@if (User.IsInRole("Candidate"))
{
    <div class="container">
        <a href="@Url.Action("Create")" class="btn btn-success"><span class="glyphicon glyphicon-pencil"></span> Новое резюме</a>
    </div>
}
<div id="modDialog" class="modal fade" role="dialog">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
@section scripts {
    <script type="text/javascript">
        $(function () {
            $.ajaxSetup({ cache: false });
            $(".resume").click(function (e) {
                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })</script>
}
